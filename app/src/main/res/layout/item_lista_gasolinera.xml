<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"


    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:id="@+id/layout">
        <!-- android:background="@drawable/ripple_recycler" -->


        <ImageView
            android:id="@+id/imagen"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:foregroundGravity="center"
            android:scaleType="fitXY"
        />
        <!--android:src="@drawable/huella" -->
<TextView
    android:id="@+id/nombre"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginStart="10dp"
    android:layout_toEndOf="@+id/imagen"
    android:layout_toRightOf="@+id/imagen"
    android:layout_marginEnd="80dp"
    android:text="This is a very long text and we need to show 3...(dots)"
    android:textSize="16sp"
    android:ellipsize="end"
    android:maxLines="1"
    android:textStyle="bold" />

<TextView
    android:id="@+id/tipo_aviso"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/nombre"
    android:layout_marginLeft="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="5dp"
    android:layout_toEndOf="@+id/imagen"
    android:layout_toRightOf="@+id/imagen"
    android:text="Ciudad"
    android:textStyle="bold" />



<TextView
    android:id="@+id/descripcion"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/tipo_aviso"
    android:layout_marginLeft="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="5dp"
    android:layout_toEndOf="@+id/imagen"
    android:layout_toRightOf="@+id/imagen"
    android:ellipsize="end"
    android:maxLines="1"
    android:text="This is a very long text and we need to show 3...(dots)" />

<ImageView
    android:id="@+id/favorito"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:layout_alignParentRight="true"
    android:padding="5dp"
    />
     <!--   android:src="@drawable/ic_favorito" -->

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_marginTop="10dp"
          android:layout_below="@+id/descripcion">

          <!-- Layout gasolina 93 -->
          <LinearLayout
              android:id="@+id/layout_93"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginRight="7dp"
              android:background="#FF9800"
              android:gravity="center"
              android:orientation="vertical"
              android:paddingLeft="8dp"
              android:paddingTop="2dp"
              android:paddingRight="8dp"
              android:paddingBottom="2dp">

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Gasolina 93"
                  android:textColor="#fff"
                  android:textSize="10dp" />

              <TextView
                  android:id="@+id/precio_93"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="$ 500"
                  android:textColor="#fff"
                  android:textStyle="bold" />


          </LinearLayout>

          <!-- Layout gasolina 95 -->
          <LinearLayout
              android:id="@+id/layout_95"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginRight="7dp"
              android:background="@color/colorPrimary"
              android:gravity="center"
              android:orientation="vertical"
              android:paddingLeft="8dp"
              android:paddingTop="2dp"
              android:paddingRight="8dp"

              android:paddingBottom="2dp">

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Gasolina 95"
                  android:textColor="#fff"
                  android:textSize="10dp" />

              <TextView
                  android:id="@+id/precio_95"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="$ 500"
                  android:textColor="#fff"
                  android:textStyle="bold" />


          </LinearLayout>

          <!-- Layout gasolina 97-->
          <LinearLayout
              android:id="@+id/layout_97"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginRight="7dp"
              android:background="#F44336"
              android:gravity="center"
              android:orientation="vertical"
              android:paddingLeft="8dp"
              android:paddingTop="2dp"
              android:paddingRight="8dp"

              android:paddingBottom="2dp">

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Gasolina 97"
                  android:textColor="#fff"
                  android:textSize="10dp" />

              <TextView
                  android:id="@+id/precio_97"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="$ 500"
                  android:textColor="#fff"
                  android:textStyle="bold" />
          </LinearLayout>

          <!-- Layout gasolina DIESEL-->
          <LinearLayout
              android:id="@+id/layout_diesel"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginRight="7dp"
              android:background="#535252"
              android:gravity="center"
              android:orientation="vertical"
              android:paddingLeft="8dp"
              android:paddingTop="2dp"
              android:paddingRight="8dp"

              android:paddingBottom="2dp">

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Gasol. Diesel"
                  android:textColor="#fff"
                  android:textSize="10dp" />

              <TextView
                  android:id="@+id/precio_diesel"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="$ 500"
                  android:textColor="#fff"
                  android:textStyle="bold" />


          </LinearLayout>

          <!-- Layout glp -->
          <LinearLayout
              android:id="@+id/layout_glp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginRight="10dp"
              android:background="#03A9F4"
              android:gravity="center"
              android:orientation="vertical"
              android:paddingLeft="8dp"
              android:paddingTop="2dp"
              android:paddingRight="8dp"
              android:paddingBottom="2dp">

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Glp"
                  android:textColor="#fff"
                  android:textSize="10dp" />

              <TextView
                  android:id="@+id/precio_glp"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="$ 500"
                  android:textColor="#fff"
                  android:textStyle="bold" />
          </LinearLayout>

      </LinearLayout>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="#DAD6D6"/>
</LinearLayout>